<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:gravity="center">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieBienvenida"
        android:layout_width="270dp"
        android:layout_height="270dp"
        app:lottie_rawRes="@raw/profile"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_gravity="center"/>


    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_welcome"
        android:layout_gravity="center"
        android:contentDescription="Bienvenida"/>

    <!-- Texto de bienvenida -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido! Para continuar, completa tu perfil."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="0dp"/>

    <!-- Botón de acción -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCompletarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completar perfil"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_500"
        android:layout_marginTop="10dp"
        app:cornerRadius="25dp"/>

</LinearLayout>
